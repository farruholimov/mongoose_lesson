<%- include('parts/header') %>
<% var ads %>

<section class="m-4 p-4">
	<div class="container">
		<h2 class="text-center">E'lonlar</h2>

		<div class="row g-4">
			<% for(let ad of ads) {%>
			<div class="col-lg-4 col-md-6">
				<div class="card text-center" style="flex-grow: 1">
					<img
						src="public/uploads/<%= ad.ad_photos[0]%>"
						class="card-img-top"
						style="
							height: 200px;
							width: 200px;
							object-fit: cover;
							margin: 0 auto;
						"
						alt="..."
					/>
					<div class="card-body">
						<a
							href="/ads/<%= ad.ad_slug%>"
							class="btn btn-primary m-0 p-2"
							><h5 class="card-title p-0 m-0">
								<%= ad.ad_title%>
							</h5>
						</a>
						<h5><%= ad.ad_price%></h5>
					</div>
				</div>
			</div>
			<%} %>
		</div>
	</div>
</section>

<%- include('parts/footer') %>
